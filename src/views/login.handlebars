<div class="login-container">
    <div>
    <img class="banner-login"src="https://alacarta.com.py/img/inherit/2018/09/IMG_4193.jpg"/>
  </div>
  <h1 class="titulo-login">Inicia sesión</h1>
  <form id="login-form" class="login-form">
    <div class="form-group">

      <label for="username">Usuario:</label>
      <input class="fields" type="text" id="email" name="username" required />
    </div>
    <div class="form-group">

      <label for="password">Contraseña:</label>
      <input class="fields" type="password" id="password" name="password" required />

    </div>
    <button id="login" type="submit">Ingresar</button>
  </form>
</div>
<script src="js/login.js"></script>